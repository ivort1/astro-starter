---
import { FAQS } from "../../data/site.gcd";
---

<section class="py-28 px-6" style="background:var(--color-gcd-bg);">
  <div class="max-w-300 mx-auto">
    <div class="grid grid-cols-1 lg:grid-cols-[1fr_1.6fr] gap-16 items-start">

      <!-- Left: Header (sticky on desktop) -->
      <div class="lg:sticky lg:top-28">
        <p class="text-[11px] font-semibold uppercase tracking-[4px] mb-4" style="color:var(--color-gcd-teal);">
          FAQs
        </p>
        <h2 class="text-[clamp(28px,4vw,42px)] font-bold leading-[1.2] mb-5" style="color:var(--color-gcd-text);">
          Have a Question?
        </h2>
        <p class="text-[16px] leading-relaxed mb-8" style="color:var(--color-gcd-muted);">
          Still have questions? Reach out directly â€” we respond the same day.
        </p>
        <a
          href="/gcd/contact"
          class="inline-flex items-center gap-2 text-[15px] font-semibold no-underline transition-all duration-200 group"
          style="color:var(--color-gcd-teal);"
        >
          Ask us anything
          <svg class="w-4.5 h-4.5 transition-transform duration-200 group-hover:translate-x-1" viewBox="0 0 24 24" fill="none" aria-hidden="true">
            <path d="M5 12h14m-6-6 6 6-6 6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </a>
      </div>

      <!-- Right: Accordion -->
      <div class="flex flex-col" style="border-top:1px solid var(--color-gcd-border);">
        {FAQS.map((faq, i) => (
          <details
            class="group py-6"
            style="border-bottom:1px solid var(--color-gcd-border);"
          >
            <summary class="flex items-center justify-between gap-4 cursor-pointer list-none text-[16px] font-semibold" style="color:var(--color-gcd-text);">
              {faq.q}
              <svg
                class="faq-chevron w-5 h-5 shrink-0 transition-transform duration-300"
                style="color:var(--color-gcd-tuted);"
                viewBox="0 0 24 24"
                fill="none"
                aria-hidden="true"
              >
                <path d="M6 9l6 6 6-6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
            </summary>
            <p class="mt-4 text-[15px] leading-relaxed" style="color:var(--color-gcd-muted);">
              {faq.a}
            </p>
          </details>
        ))}
      </div>

    </div>
  </div>
</section>

<style>
  details[open] > summary .faq-chevron {
    transform: rotate(180deg);
  }
  details > summary::-webkit-details-marker { display: none; }
</style>
