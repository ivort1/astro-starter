---
import { Picture } from 'astro:assets';

import computer from "../assets/3d_computer.webp";
import Button1 from '../components/buttons/Button1.astro';
---

<section class="px-6 lg:px-8 py-5 max-w-7xl mx-auto grid grid-cols-1 justify-items-center items-center text-center md:grid-cols-2 md:text-left">
    <div class="flex flex-col gap-5">
        <div>
            <h2 class="text-base/7 font-semibold text-accent">Custom Designs and Code</h2>

            <p class="mt-2 text-5xl font-semibold tracking-tight text-balance text-text sm:text-6xl">
                Small Business Website Design & Development
            </p>
        </div>
        
        <p class="text-lg/8 text-muted">
            Custom designed and coded websites, logo design and branding, copywriting, SEO, and more. All starting at $300 a month with $0 down.
        </p>
    
        <Button1 css="before:bg-[#D4AF37] w-full mt-8 px-3.5 py-2.5 text-center text-lg font-semibold sm:mt-10 md:w-1/2 sm:px-8 sm:py-5" href="/" text="Get started" bg="bg-[#E1C16B]" color="text-[#EAEAEA]" borderRadius="rounded-md"/>
    </div>
    
    <Picture src={computer} format="webp" alt="computer"/>
</section>

