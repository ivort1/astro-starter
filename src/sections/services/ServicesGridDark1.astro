---
import { HOME_SERVICES } from "../../data/site.gcd";

// Icons keyed to service icon strings
const icons: Record<string, string> = {
  design: `<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><rect x="3" y="3" width="18" height="18" rx="2"/><path d="M3 9h18M9 21V9"/></svg>`,
  seo: `<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><circle cx="11" cy="11" r="8"/><path d="m21 21-4.35-4.35M11 8v6M8 11h6"/></svg>`,
  hosting: `<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><rect x="2" y="3" width="20" height="7" rx="1"/><rect x="2" y="14" width="20" height="7" rx="1"/><path d="M6 7h.01M6 18h.01"/></svg>`,
  edits: `<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"/><path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4Z"/></svg>`,
  mobile: `<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><rect x="5" y="2" width="14" height="20" rx="2"/><path d="M12 18h.01"/></svg>`,
  speed: `<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M13 2L3 14h9l-1 8 10-12h-9l1-8Z"/></svg>`,
};
---

<section class="py-28 px-6" style="background:var(--color-gcd-bg);">
  <div class="max-w-300 mx-auto">

    <!-- Header -->
    <div class="max-w-[560px] mb-16">
      <p class="text-[11px] font-semibold uppercase tracking-[4px] mb-4" style="color:var(--color-gcd-teal);">
        What's Included
      </p>
      <h2 class="text-[clamp(28px,4vw,42px)] font-bold leading-[1.2] mb-5" style="color:var(--color-gcd-text);">
        Everything You Need.<br />Nothing You Don't.
      </h2>
      <p class="text-[17px] leading-relaxed" style="color:var(--color-gcd-muted);">
        Every plan includes all six of these services. No upsells, no surprises.
      </p>
    </div>

    <!-- Grid -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-px" style="background:var(--color-gcd-border);">
      {HOME_SERVICES.map((service) => (
        <div
          class="p-8 flex flex-col gap-4 transition-colors duration-200 group"
          style="background:var(--color-gcd-bg);"
        >
          <!-- Icon -->
          <div
            class="w-11 h-11 flex items-center justify-center rounded-lg flex-shrink-0 transition-colors duration-200"
            style="background:var(--color-gcd-surface);color:var(--color-gcd-teal);"
            aria-hidden="true"
          >
            <Fragment set:html={icons[service.icon]} />
          </div>

          <!-- Text -->
          <div>
            <h3 class="text-[17px] font-semibold mb-2" style="color:var(--color-gcd-text);">
              {service.title}
            </h3>
            <p class="text-[14px] leading-relaxed" style="color:var(--color-gcd-muted);">
              {service.desc}
            </p>
          </div>
        </div>
      ))}
    </div>

    <!-- Footer CTA -->
    <div class="mt-12 text-center">
      <a
        href="/gcd/services"
        class="inline-flex items-center gap-2 text-[15px] font-semibold no-underline transition-all duration-200 group"
        style="color:var(--color-gcd-teal);"
      >
        See full list of services
        <svg class="w-4.5 h-4.5 transition-transform duration-200 group-hover:translate-x-1" viewBox="0 0 24 24" fill="none" aria-hidden="true">
          <path d="M5 12h14m-6-6 6 6-6 6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
      </a>
    </div>

  </div>
</section>
