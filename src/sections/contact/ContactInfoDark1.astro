---
import { SITE } from "../../data/site.gcd";
import Icon from "../../components/ui/Icon.astro";
---

<div>
  <p class="text-[11px] font-semibold uppercase tracking-[4px] mb-4" style="color:var(--color-gcd-teal);">
    Contact
  </p>
  <h2 class="text-[clamp(28px,4vw,40px)] font-bold leading-[1.2] mb-5" style="color:var(--color-gcd-text);">
    Let's Talk About Your Project
  </h2>
  <p class="text-[17px] leading-relaxed mb-10" style="color:var(--color-gcd-muted);">
    Tell us about your business and what you're looking for. We'll get back to you the same day with a clear plan and no-pressure answer.
  </p>

  <!-- Contact details -->
  <div class="flex flex-col gap-5">
    <a
      href={SITE.phoneTel}
      class="flex items-center gap-4 no-underline transition-colors duration-200 group"
    >
      <div
        class="w-11 h-11 flex items-center justify-center rounded-lg shrink-0"
        style="background:var(--color-gcd-surface);color:var(--color-gcd-teal);"
      >
        <Icon name="phone" />
      </div>
      <div>
        <div class="text-[12px] uppercase tracking-[1px] mb-0.5" style="color:var(--color-gcd-muted);">Phone</div>
        <div class="text-[15px] font-medium" style="color:var(--color-gcd-text);">{SITE.phoneFmt}</div>
      </div>
    </a>

    <a
      href={SITE.emailHref}
      class="flex items-center gap-4 no-underline transition-colors duration-200 group"
    >
      <div
        class="w-11 h-11 flex items-center justify-center rounded-lg shrink-0"
        style="background:var(--color-gcd-surface);color:var(--color-gcd-teal);"
      >
        <Icon name="mail" />
      </div>
      <div>
        <div class="text-[12px] uppercase tracking-[1px] mb-0.5" style="color:var(--color-gcd-muted);">Email</div>
        <div class="text-[15px] font-medium break-all" style="color:var(--color-gcd-text);">{SITE.email}</div>
      </div>
    </a>

    <div class="flex items-center gap-4">
      <div
        class="w-11 h-11 flex items-center justify-center rounded-lg shrink-0"
        style="background:var(--color-gcd-surface);color:var(--color-gcd-teal);"
      >
        <Icon name="map-pin" />
      </div>
      <div>
        <div class="text-[12px] uppercase tracking-[1px] mb-0.5" style="color:var(--color-gcd-muted);">Location</div>
        <div class="text-[15px] font-medium" style="color:var(--color-gcd-text);">{SITE.address}</div>
      </div>
    </div>
  </div>

  <!-- Turnaround note -->
  <div
    class="mt-10 p-5 rounded-xl"
    style="background:var(--color-gcd-surface);border:1px solid var(--color-gcd-border);"
  >
    <p class="text-[14px] leading-relaxed m-0" style="color:var(--color-gcd-muted);">
      <strong style="color:var(--color-gcd-text);">We respond within a few hours.</strong>
      {" "}Fill out the form or send an email â€” you'll hear from us before the end of the business day.
    </p>
  </div>
</div>
