---
import { SITE } from "../../data/site.en";
import Icon from "../../components/ui/Icon.astro";
---

<div>
  <h2 class="font-display text-[28px] font-semibold text-black mb-2">Reach Anthony Directly</h2>
  <p class="text-gray-700 leading-relaxed mb-8">
    No call centers, no runaround. When you reach out to Harding Construction, you're talking
    directly to Anthony â€” the owner. That's how we like it.
  </p>

  <div class="p-12 rounded-2xl border border-gray-100">
    <!-- Call -->
    <div class="flex items-start gap-4 py-6 border-b border-gray-100">
      <div class="w-11 h-11 rounded-[10px] bg-gray-100 flex items-center justify-center shrink-0">
        <Icon name="phone" />
      </div>
      <div>
        <div class="text-xs font-semibold tracking-wider uppercase text-gray-500 mb-1">Call Now</div>
        <a href={SITE.phoneTel} class="text-lg font-semibold text-black no-underline hover:text-accent transition-colors">
          {SITE.phoneFmt}
        </a>
        <div class="text-xs text-gray-500 mt-0.5">Best for immediate questions & scheduling</div>
      </div>
    </div>

    <!-- Text -->
    <div class="flex items-start gap-4 py-6 border-b border-gray-100">
      <div class="w-11 h-11 rounded-[10px] bg-gray-100 flex items-center justify-center shrink-0">
        <Icon name="phone" />
      </div>
      <div>
        <div class="text-xs font-semibold tracking-wider uppercase text-gray-500 mb-1">Text Us</div>
        <a href={SITE.textSms} class="text-lg font-semibold text-black no-underline hover:text-accent transition-colors">
          {SITE.textFmt}
        </a>
        <div class="text-xs text-gray-500 mt-0.5">Quick questions & photo estimates</div>
      </div>
    </div>

    <!-- Email -->
    <div class="flex items-start gap-4 py-6 border-b border-gray-100">
      <div class="w-11 h-11 rounded-[10px] bg-gray-100 flex items-center justify-center shrink-0">
        <Icon name="mail" />
      </div>
      <div>
        <div class="text-xs font-semibold tracking-wider uppercase text-gray-500 mb-1">Email</div>
        <a href={SITE.emailHref} class="text-[15px] font-semibold text-black no-underline hover:text-accent transition-colors break-all">
          {SITE.email}
        </a>
        <div class="text-xs text-gray-500 mt-0.5">Detailed inquiries & project descriptions</div>
      </div>
    </div>

    <!-- Location -->
    <div class="flex items-start gap-4 py-6">
      <div class="w-11 h-11 rounded-[10px] bg-gray-100 flex items-center justify-center shrink-0">
        <Icon name="map-pin" />
      </div>
      <div>
        <div class="text-xs font-semibold tracking-wider uppercase text-gray-500 mb-1">Location</div>
        <div class="text-lg font-semibold text-black">{SITE.address}</div>
        <div class="text-xs text-gray-500 mt-0.5">Serving the entire Inland Empire</div>
      </div>
    </div>
  </div>
</div>
