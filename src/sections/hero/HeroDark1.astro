---
import { SITE } from "../../data/site.gcd";
---

<section
  class="relative flex items-center min-h-[90vh] px-6 py-24 overflow-hidden"
  style="background:var(--color-gcd-bg);"
>
  <!-- Grid background -->
  <div
    class="absolute inset-0 pointer-events-none"
    style="
      background-image:
        linear-gradient(var(--color-gcd-border) 1px, transparent 1px),
        linear-gradient(90deg, var(--color-gcd-border) 1px, transparent 1px);
      background-size: 60px 60px;
      opacity: 0.4;
    "
    aria-hidden="true"
  ></div>

  <!-- Teal glow -->
  <div
    class="absolute top-0 left-1/2 -translate-x-1/2 w-175 h-125 rounded-full pointer-events-none"
    style="background:radial-gradient(ellipse at center, rgba(45,212,191,0.08) 0%, transparent 70%);"
    aria-hidden="true"
  ></div>

  <div class="relative max-w-300 mx-auto w-full">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 xl:gap-20 items-center">

      <!-- Left: Text -->
      <div>
        <p
          class="text-[11px] font-semibold uppercase tracking-[4px] mb-6 animate-fade-in"
          style="color:var(--color-gcd-teal);"
        >
          Web Development for Small Businesses
        </p>

        <h1
          class="text-[clamp(40px,5.5vw,68px)] font-bold leading-[1.1] tracking-tight mb-8 animate-fade-up"
          style="color:var(--color-gcd-text);"
        >
          A Website That
          <br />
          <span style="color:var(--color-gcd-teal);">Works as Hard</span>
          <br />
          as You Do
        </h1>

        <p
          class="text-[18px] leading-relaxed max-w-120 mb-10 animate-fade-up-d1"
          style="color:var(--color-gcd-muted);"
        >
          Custom-built, blazing fast, SEO-optimized websites for local service businesses.
          <strong style="color:var(--color-gcd-text);">$200/month. <span style="border-bottom:2px solid var(--color-gcd-teal);">$0 down</span>.</strong>
        </p>

        <div class="flex flex-wrap gap-4 animate-fade-up-d2">
          <a
            href="/gcd/contact"
            class="inline-flex items-center gap-2.5 rounded-md px-8 py-4 text-[15px] font-semibold no-underline transition-all duration-200 hover:-translate-y-px"
            style="background:var(--color-gcd-teal);color:#0D0D0D;"
          >
            Start Your Project
            <svg class="w-4.5 h-4.5" viewBox="0 0 24 24" fill="none" aria-hidden="true">
              <path d="M5 12h14m-6-6 6 6-6 6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </a>
          <a
            href="/gcd/work"
            class="inline-flex items-center gap-2.5 rounded-md px-8 py-4 text-[15px] font-semibold no-underline transition-all duration-200"
            style="color:var(--color-gcd-text);border:1.5px solid var(--color-gcd-border);"
          >
            See Our Work
          </a>
        </div>

        <!-- Stats strip -->
        <div
          class="flex flex-wrap items-center gap-6 mt-14 pt-10 animate-fade-up-d3"
          style="border-top:1px solid var(--color-gcd-border);"
        >
          <div class="flex items-center gap-2">
            <span class="text-2xl font-bold" style="color:var(--color-gcd-teal);">$0</span>
            <span class="text-sm" style="color:var(--color-gcd-muted);">upfront cost</span>
          </div>
          <div class="w-px h-8" style="background:var(--color-gcd-border);"></div>
          <div class="flex items-center gap-2">
            <span class="text-2xl font-bold" style="color:var(--color-gcd-teal);">30</span>
            <span class="text-sm" style="color:var(--color-gcd-muted);">day trial period</span>
          </div>
          <div class="w-px h-8" style="background:var(--color-gcd-border);"></div>
          <div class="flex items-center gap-2">
            <span class="text-2xl font-bold" style="color:var(--color-gcd-teal);">3â€“6</span>
            <span class="text-sm" style="color:var(--color-gcd-muted);">week delivery</span>
          </div>
          <div class="w-px h-8" style="background:var(--color-gcd-border);"></div>
        </div>
      </div>

      <!-- Right: Browser mockup -->
      <div class="hidden lg:block relative animate-fade-in">
        <div class="relative mx-auto max-w-130">

          <!-- Browser frame -->
          <div
            class="rounded-xl overflow-hidden"
            style="border:1px solid var(--color-gcd-border);box-shadow:0 32px 80px rgba(0,0,0,0.6);"
          >
            <!-- Chrome bar -->
            <div
              class="flex items-center gap-2 px-4 py-3"
              style="background:var(--color-gcd-surface);border-bottom:1px solid var(--color-gcd-border);"
            >
              <div class="w-3 h-3 rounded-full shrink-0" style="background:#ff5f57;"></div>
              <div class="w-3 h-3 rounded-full shrink-0" style="background:#ffbd2e;"></div>
              <div class="w-3 h-3 rounded-full shrink-0" style="background:#28c840;"></div>
              <div
                class="flex-1 mx-3 px-3 py-1.5 rounded text-[11px] text-center truncate"
                style="background:var(--color-gcd-bg);color:var(--color-gcd-muted);"
              >
                www.ironconstruction.com
              </div>
            </div>

            <!-- Simulated website preview -->
            <div class="p-5 select-none" style="background:#0f0f0f;height:320px;overflow:hidden;">

              <!-- Simulated nav -->
              <div class="flex justify-between items-center mb-5 pb-3" style="border-bottom:1px solid rgba(255,255,255,0.07);">
                <div class="w-20 h-2.5 rounded" style="background:rgba(255,255,255,0.7);"></div>
                <div class="flex gap-3 items-center">
                  <div class="w-10 h-1.5 rounded" style="background:rgba(255,255,255,0.2);"></div>
                  <div class="w-10 h-1.5 rounded" style="background:rgba(255,255,255,0.2);"></div>
                  <div class="w-10 h-1.5 rounded" style="background:rgba(255,255,255,0.2);"></div>
                  <div class="w-20 h-6 rounded" style="background:#D95030;opacity:0.85;"></div>
                </div>
              </div>

              <!-- Simulated hero section -->
              <div class="mb-5">
                <div class="w-16 h-1.5 rounded mb-3" style="background:#D95030;opacity:0.7;"></div>
                <div class="w-4/5 h-4 rounded mb-2.5" style="background:rgba(255,255,255,0.75);"></div>
                <div class="w-3/5 h-4 rounded mb-3" style="background:rgba(255,255,255,0.55);"></div>
                <div class="w-full h-2 rounded mb-1.5" style="background:rgba(255,255,255,0.2);"></div>
                <div class="w-3/4 h-2 rounded mb-4" style="background:rgba(255,255,255,0.2);"></div>
                <div class="flex gap-2">
                  <div class="w-24 h-7 rounded" style="background:#D95030;opacity:0.8;"></div>
                  <div class="w-24 h-7 rounded" style="background:rgba(255,255,255,0.08);border:1px solid rgba(255,255,255,0.15);"></div>
                </div>
              </div>

              <!-- Simulated cards row -->
              <div class="grid grid-cols-3 gap-2.5">
                {[0,1,2].map(() => (
                  <div class="rounded-lg p-3" style="background:rgba(255,255,255,0.04);border:1px solid rgba(255,255,255,0.07);">
                    <div class="w-5 h-5 rounded mb-2" style="background:#D95030;opacity:0.6;"></div>
                    <div class="w-full h-1.5 rounded mb-1.5" style="background:rgba(255,255,255,0.3);"></div>
                    <div class="w-2/3 h-1.5 rounded mb-3" style="background:rgba(255,255,255,0.2);"></div>
                    <div class="w-full h-1 rounded mb-1" style="background:rgba(255,255,255,0.1);"></div>
                    <div class="w-4/5 h-1 rounded" style="background:rgba(255,255,255,0.1);"></div>
                  </div>
                ))}
              </div>
            </div>
          </div>

          <!-- Floating metric badges -->
          <div
            class="absolute -bottom-5 -left-6 px-4 py-3 rounded-xl"
            style="background:var(--color-gcd-surface);border:1px solid var(--color-gcd-border);box-shadow:0 8px 32px rgba(0,0,0,0.4);"
          >
            <div class="text-[22px] font-bold leading-none mb-1" style="color:var(--color-gcd-teal);">99</div>
            <div class="text-[11px] font-medium" style="color:var(--color-gcd-muted);">PageSpeed</div>
          </div>

          <div
            class="absolute -top-5 -right-6 px-4 py-3 rounded-xl"
            style="background:var(--color-gcd-surface);border:1px solid var(--color-gcd-border);box-shadow:0 8px 32px rgba(0,0,0,0.4);"
          >
            <div class="text-[22px] font-bold leading-none mb-1" style="color:var(--color-gcd-teal);">100</div>
            <div class="text-[11px] font-medium" style="color:var(--color-gcd-muted);">SEO Score</div>
          </div>

          <div
            class="absolute top-1/2 -right-6 -translate-y-1/2 px-4 py-3 rounded-xl"
            style="background:var(--color-gcd-surface);border:1px solid var(--color-gcd-border);box-shadow:0 8px 32px rgba(0,0,0,0.4);"
          >
            <div class="text-[22px] font-bold leading-none mb-1" style="color:var(--color-gcd-teal);">100</div>
            <div class="text-[11px] font-medium" style="color:var(--color-gcd-muted);">Accessibility</div>
          </div>

        </div>
      </div>

    </div>
  </div>
</section>
