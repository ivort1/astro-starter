<section
  class="py-24 px-6 relative overflow-hidden"
  style="background:var(--color-gcd-bg);"
>
  <!-- Grid lines -->
  <div
    class="absolute inset-0 pointer-events-none"
    style="
      background-image:
        linear-gradient(var(--color-gcd-border) 1px, transparent 1px),
        linear-gradient(90deg, var(--color-gcd-border) 1px, transparent 1px);
      background-size: 60px 60px;
      opacity: 0.4;
    "
    aria-hidden="true"
  ></div>

  <div class="relative max-w-300 mx-auto">
    <p class="text-[11px] font-semibold uppercase tracking-[4px] mb-4" style="color:var(--color-gcd-teal);">
      Services
    </p>
    <h1 class="text-[clamp(36px,5vw,60px)] font-bold leading-[1.15] mb-6 max-w-[700px]" style="color:var(--color-gcd-text);">
      What You Get for $200/Month
    </h1>
    <p class="text-[18px] leading-relaxed max-w-[560px]" style="color:var(--color-gcd-muted);">
      Every service below is included in your plan. We don't charge extra for things that should be standard.
    </p>
  </div>
</section>
