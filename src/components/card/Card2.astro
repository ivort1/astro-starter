---
interface Props {
    header: string;
    body: string;
    href: string;
}

const { header, body, href } = Astro.props;
---

<div class="rounded-xl px-2 py-7 group relative overflow-hidden bg-foreground shadow-xl ring-1 ring-gray-900/5 transition-all duration-300 hover:-translate-y-1 hover:shadow-2xl sm:mx-auto sm:max-w-sm sm:rounded-lg sm:px-10">
    <div class="flex flex-col justify-center items-center gap-7 max-w-md">
        <!-- Icon container with its background -->
        <div class="relative inline-block">
            <!-- Scalable background circle behind the icon -->
            <span class="absolute inset-0 origin-center -z-5 h-20 w-20 rounded-full bg-accent-active transition-all duration-300 group-hover:scale-[10]"></span>
            
            <!-- Icon -->
            <span class="relative z-10 grid h-20 w-20 place-items-center rounded-full bg-accent transition-all duration-300">
                <svg class="h-10 w-10 text-text transition-all" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" >
                    <path stroke-linecap="round" stroke-linejoin="round" d="M8.625 9.75a.375.375 0 11-.75 0 .375.375 0 01.75 0zm0 0H8.25m4.125 0a.375.375 0 11-.75 0 .375.375 0 01.75 0zm0 0H12m4.125 0a.375.375 0 11-.75 0 .375.375 0 01.75 0zm0 0h-.375m-13.5 3.01c0 1.6 1.123 2.994 2.707 3.227 1.087.16 2.185.283 3.293.369V21l4.184-4.183a1.14 1.14 0 01.778-.332 48.294 48.294 0 005.83-.498c1.585-.233 2.708-1.626 2.708-3.228V6.741c0-1.602-1.123-2.995-2.707-3.228A48.394 48.394 0 0012 3c-2.392 0-4.744.175-7.043.513C3.373 3.746 2.25 5.14 2.25 6.741v6.018z" />
                </svg>
            </span>
        </div>

        <!-- Card text content -->
        <div class="transition-all duration-300 group-hover:text-white/90">
            <h2 class="text-text font-semibold">{ header }</h2>
            <p class="text-text mt-2">
                { body }
            </p>
        </div>

        <div class="font-semibold leading-7">
            <a href={href} class="text-accent cursor-pointer transition-all duration-300 group-hover:text-white">
                Get started &rarr;
            </a>
        </div>
    </div>
</div>