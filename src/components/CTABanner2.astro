---
import { SITE } from "../data/site";

interface Props {
  title?: string;
  subtitle?: string;
}

const { 
  title = "Ready to get started?",
  subtitle = "Contact us today for a free, no-obligation quote."
} = Astro.props;

---

<section class="bg-accent text-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16 lg:py-20">
    <div class="text-center">
        <h2 class="font-display font-semibold leading-tight mb-5 text-white" style="font-size: clamp(32px, 5vw, 48px);">
            Ready to Get Started?
        </h2>
        <p class="text-[17px] text-white/60 leading-relaxed mb-10 max-w-120 mx-auto">
            Contact us today for a free, no-obligation quote.
        </p>
      
      <div class="mt-8 flex flex-col sm:flex-row justify-center gap-4">
        <a 
          href="/contact"
          class="inline-flex items-center justify-center gap-2 px-6 py-3 text-base font-semibold text-accent bg-white hover:bg-gray-100 rounded-md transition-colors"
        >
          Get a Free Quote
          <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
          </svg>
        </a>
        <a href={SITE.phoneTel} class="inline-flex items-center justify-center gap-2 px-6 py-3 text-base font-semibold text-white border border-white/30 hover:bg-white/10 rounded-md transition-color">
          <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
          </svg>
          Call Now
        </a>
      </div>
    </div>
  </div>
</section>