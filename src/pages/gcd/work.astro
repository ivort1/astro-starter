---
import BaseLayoutGCD from "../../layouts/BaseLayoutGCD.astro";
import Portfolio from "../../sections/portfolio/Portfolio1.astro";
import CTABanner from "../../sections/cta/CTABannerDark1.astro";
---

<BaseLayoutGCD
  title="Our Work | Golden Coast Digital — Client Websites"
  description="Browse websites we've built for local service businesses — contractors, home service companies, and more. Fast, modern, and built to rank."
>
  <!-- Page header -->
  <section
    class="py-20 px-6"
    style="background:var(--color-gcd-bg);border-bottom:1px solid var(--color-gcd-border);"
  >
    <div class="max-w-300 mx-auto">
      <p class="text-[11px] font-semibold uppercase tracking-[4px] mb-4" style="color:var(--color-gcd-teal);">
        Our Work
      </p>
      <h1
        class="text-[clamp(32px,5vw,56px)] font-bold leading-[1.15] mb-5 max-w-[640px]"
        style="color:var(--color-gcd-text);"
      >
        Websites We've Built
      </h1>
      <p class="text-[17px] leading-relaxed max-w-[500px]" style="color:var(--color-gcd-muted);">
        Real businesses, real results. Every site is custom-built — no templates, no shortcuts.
      </p>
    </div>
  </section>

  <Portfolio />
  <CTABanner />
</BaseLayoutGCD>
