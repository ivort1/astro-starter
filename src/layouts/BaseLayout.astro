---
import Nav from "../sections/nav/Nav1.astro";
import Footer from "../sections/footer/Footer1.astro";
import { SITE } from "../data/site.en";
import "../styles/global.css";

// Preload only the fonts visible above the fold. Vite resolves these to hashed
// paths at build time, guaranteeing the preload href matches the @font-face
// src url() so the browser doesn't fetch the same file twice.
import poppinsRegularUrl from "../assets/fonts/Poppins-Regular.woff2?url";
import poppinsSemiBoldUrl from "../assets/fonts/Poppins-SemiBold.woff2?url";
import garamondSemiBoldUrl from "../assets/fonts/CormorantGaramond-SemiBold.woff2?url";

interface Props {
  title?: string;
  description?: string;
  page?: string;
  hideFloatingCTA?: boolean;
}

const {
  title = `${SITE.name} | Kitchen & Bathroom Remodels in Upland, CA`,
  description = SITE.description,
  page = "",
  hideFloatingCTA = false,
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="robots" content="index, follow" />
    <title>{title}</title>

    <!-- Fonts: preload only weights used above the fold.
         crossorigin is required even for same-origin fonts when preloading. -->
    <link rel="preload" href={poppinsRegularUrl} as="font" type="font/woff2" crossorigin />
    <link rel="preload" href={poppinsSemiBoldUrl} as="font" type="font/woff2" crossorigin />
    <link rel="preload" href={garamondSemiBoldUrl} as="font" type="font/woff2" crossorigin />

    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:locale" content="en_US" />

    <!-- Local Business Schema -->
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "HomeAndConstructionBusiness",
      "name": SITE.name,
      "description": SITE.description,
      "telephone": SITE.phoneFmt,
      "email": SITE.email,
      "address": {
        "@type": "PostalAddress",
        "addressLocality": "Upland",
        "addressRegion": "CA",
        "postalCode": "91784",
        "addressCountry": "US"
      },
      "areaServed": [
        "Upland", "Rancho Cucamonga", "Claremont", "Ontario",
        "Montclair", "Fontana", "San Dimas", "La Verne"
      ],
      "priceRange": "$$",
      "aggregateRating": {
        "@type": "AggregateRating",
        "ratingValue": "5",
        "reviewCount": "50"
      }
    })} />
  </head>
  <body class="bg-white">
    <Nav currentPage={page} />

    <main>
      <slot />
    </main>

    <Footer />
  </body>
</html>
